---                              
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
import '../styles/global.css'  
---   
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cormorant:wght@457&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">
		
		<script defer src="https://cdn.jsdelivr.net/npm/@alpinejs/mask@3.x.x/dist/cdn.min.js"></script>
		
		<title>Astro Basics</title>
	</head>
	<body id="top" class="min-h-screen w-full m-0 flex flex-col justify-between relative">
		<Header />
		<main class="*:px-4 *:sm:px-12 bg-white">
			<slot />
		</main>
		<Footer />
	</body>
</html>