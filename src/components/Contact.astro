---
import Section from "./Section.astro"
import Image from "astro/components/Image.astro"
import Imagen from "../assets/phone-number.png"
---
<Section Id="contact" Class="pt-32 font-playfair-display w-full">
    <h2 class="text-4xl md:text-5xl text-[#BF1F3C] font-cormorant uppercase">Contacto</h2>

    <div class="mt-6 text-lg md:text-xl space-y-1.5">
        <p class="text-[#8C1642]">¿Quieres agendar cita?</p>
        <p class="text-[#0597F2]">¡Deja tus datos!</p>
    </div>

    <!-- Formulario de Contacto  -->
    <form id="contact-form" class="w-full mt-6 space-y-14" name="contact" method="POST" data-netlify="true" netlify-honeypot="username" data-netlify-recaptcha="true">
        <!-- Nombre y Apellidos -->
        <div class="flex flex-col space-y-14 md:flex-row gap-x-9">
            <div class="grow space-y-5">
                <label for="name" class="text-[#F2AE2E] contact-form__label">Nombre<span class="contact-form__required">*</span></label>
                
                <div id="name-group" class="group">
                    <input id="name" name="name" type="text" class="contact-form__input" maxlength="50">
                    <p class="contact-form__message contact-form__invalid">Por favor escribe tu nombre.</p>
                </div>
            </div>

            <div class="grow space-y-5">
                <label for="lastname" class="text-[#F25A38] contact-form__label">Apellidos<span class="contact-form__required">*</span></label>

                <div id="lastname-group" class="group">
                    <input id="lastname" name="lastname" type="text" class="contact-form__input" maxlength="50">
                    <p class="contact-form__message contact-form__invalid">Por favor escribe tus apellidos.</p>
                </div>
            </div>
        </div>

        <!-- Número de Contacto -->
        <div class="flex justify-center">
            <div class="w-full md:w-96 space-y-5" x-data>
                <label for="phone-number" class="text-[#BF1F3C] contact-form__label">Número de Contacto<span class="contact-form__required">*</span></label>

                <div id="phone-number-group" class="group">
                    <input id="phone-number" name="phone-number" type="text" class="text-center contact-form__input" x-mask="(999) 999 9999">
                    <p class="contact-form__message contact-form__invalid">Por favor escribe tu número de contacto.</p>
                    <p class="contact-form__message contact-form__invalid-format">Por favor completa tu número de contacto.</p>
                </div>
            </div>
        </div>

        <!-- Correo Electrónico y Servicio de Interés -->
        <div class="flex flex-col space-y-14 md:flex-row gap-x-9">
            <div class="w-full space-y-5">
                <label for="email" class="text-[#F2AE2E] contact-form__label">Correo Electrónico<span class="contact-form__required">*</span></label>

                <div id="email-group" class="group">
                    <input id="email" name="email" type="text" class="contact-form__input" maxlength="250">
                    <p class="contact-form__message contact-form__invalid">Por favor escribe tu correo electrónico.</p>
                    <p class="contact-form__message contact-form__invalid-format">Por favor escribe tu correo electrónico correctamente.</p>
                </div>
            </div>

            <div class="w-full space-y-5">
                <label for="service" class="text-[#0597F2] contact-form__label">Servicio de Interés<span class="contact-form__required">*</span></label>
                
                <div id="service-group" class="group">
                    <input id="service" name="service" type="text" class="contact-form__input" maxlength="250">
                    <p class="contact-form__message contact-form__invalid">Por favor escribe tu servicio de interés.</p>
                </div>
            </div>
        </div>

        <!-- Fecha de Nacimiento -->
        <div class="grow space-y-5">
            <label for="birthdate" class="text-[#BF1F3C] contact-form__label">Fecha de Nacimiento<span class="contact-form__required">*</span></label>
            
            <div id="birthdate-group" class="group">
                <input id="birthdate" name="birthdate" type="date" class="text-[#0597F2] contact-form__input">
                <p class="contact-form__message contact-form__invalid">Por favor escribe tu fecha de nacimiento.</p>
            </div>
        </div>

        <div data-netlify-recaptcha="true"></div>

        <!-- honeypot -->
        <input class="hidden" type="text" name="username">

        <p id="recaptcha-error-message" class="hidden text-red-500 text-xl text-center">Por favor completa el reCAPTCHA</p>

        <!-- Botón para enviar -->
        <button type="submit" class="contact-form__submit">Enviar</button>
    </form>

